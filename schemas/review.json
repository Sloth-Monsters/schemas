{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Review Schema",
  "type": "object",
  "properties": {
    "metadata": {
      "$ref": "meta.json#"
    },
    "title": {
      "type": "string",
      "maxLength": 140
    },
    "for": {
      "type": "object",
      "$ref": ["business.json#", "bier.json#", "reward.json#"]
    },
    "from": {
      "type": "object",
      "$ref": "customer.json"
    },
    "posted": {
      "type": "string",
      "format": "date-time"
    },
    "document": {
      "$ref": "definitions.json#/definitions/CeramicURL"
    },
    "images": {
      "type": "array",
      "items": {
        "$ref": "image.json#"
      }
    },
    "comments": {
      "type": "array",
      "items": {
        "$ref": "review-comment.json#"
      }
    }
  },
  "required": [
    "title", "for", "from", "posted", "document"
  ]
}