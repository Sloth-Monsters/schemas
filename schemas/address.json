{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Address",
  "type": "object",
  "properties": {
    "street": {
      "type": "string"
    },
    "street2": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "pattern": "^[A-Z]{2}$",
      "minLength": 2
    },
    "pincode": {
      "type": "string",
      "pattern": "^[0-9]{6}$"
    },
    "country": {
      "type": "string",
      "pattern": "^[A-Z]{2}$",
      "maxLength": 2
    },
    "latitude": {
      "type": "number"
    },
    "longitude": {
      "type": "number"
    }
  },
  "required": [
    "street",
    "city",
    "state",
    "pincode"
  ]
}